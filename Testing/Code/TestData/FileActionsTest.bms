ExitOnError( '1' )
# Files
WriteFile( 'FileActionsTest.txt' 'Action test file content' )
FileExists( file1 'FileActionsTest.txt' )
If( ${file1} != 1 )
  AddError( '"FileActionsTest.txt" has not been created')
EndIf( ${file1} )
AppendFile( 'FileActionsTest.txt' 'Added text\n' 'Another text added' )
GetFilename( name 'FileActionsTest.txt' NAME )
GetFilename( path 'FileActionsTest.txt' PATH )
GetFilename( parentpath 'FileActionsTest.txt' PARENT_PATH )
GetFilename( extension 'FileActionsTest.txt' EXTENSION )
GetFilename( namewithoutextension 'FileActionsTest.txt' NAME_WITHOUT_EXTENSION )
If( ${name} != 'FileActionsTest.txt' || ${extension} != '.txt' || ${namewithoutextension} != 'FileActionsTest' )
  AddError( 'GetFilename() failed on FileActionsTest.txt' )
EndIf( ${name} )
CopyFile( 'FileActionsTest.txt' 'FileActionsTest2.txt' 'FileActionsTest3.txt' )
FileExists( file2 'FileActionsTest2.txt' )
FileExists( file3 'FileActionsTest3.txt' )
If( ${file2} != 1 || ${file3} != 1 )
  AddError( '"' ${file2} '" and/or "' ${file3} '"' has/have not been created' )
EndIf(${file2})
ListFileInDir(list '.' 'FileActionsTest*.txt')
Echo( ${list} )
DeleteFile( 'FileActionsTest.txt' )
DeleteFile( 'FileActionsTest2.txt' )
DeleteFile( 'FileActionsTest3.txt' )
FileExists( file1 'FileActionsTest.txt')
FileExists( file2 'FileActionsTest2.txt' )
FileExists( file3 'FileActionsTest3.txt' )
If( ${file1} == '1' || ${file2} == 1 || ${file3} == '1' )
  AddError( ${file1} and/or ${file2} and/or ${file3} not deleted )
EndIf(${file1})
# Directories
MakeDirectory( 'testDirectory' )
FileExists( test 'testDirectory' )
If( ${test} != 1 )
  AddError( '"testDirectory" has not been created' )
EndIf( ${fileInTest} )

WriteFile( 'testDirectory/FileInTestDirectory.txt' 'Test file' )
FileExists( test 'testDirectory/FileInTestDirectory.txt' )
If( ${test} != '1' )
  AddError( '"testDirectory/FileIntTestDirectory.txt" has not been created' )
EndIf( ${fileInTest} )

CopyFile( 'testDirectory' 'CopiedTestDirectory' )
FileExists( test 'CopiedTestDirectory' )
If( ${test} != '1' )
  AddError( '"CopiedTestDirectory" has not been created' )
EndIf( ${fileInTest} )
FileExists( test 'CopiedTestDirectory/FileInTestDirectory.txt' )
If( ${test} != '1' )
  AddError( '"testDirectory/FileIntTestDirectory.txt" has not been created' )
EndIf( ${fileInTest} )

DeleteFile( 'testDirectory' )
FileExists( test 'testDirectory' )
If( ${test} == '1' )
  AddError( '"testDirectory" has not been deleted' )
EndIf( ${fileInTest} )

DeleteFile( 'CopiedTestDirectory' )
FileExists( test 'CopiedTestDirectory' )
If( ${test} == '1' )
  AddError( '"CopiedTestDirectory" has not been deleted' )
EndIf( ${fileInTest} )
